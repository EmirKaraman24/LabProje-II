<Window x:Class="SocialNetworkAnalysis.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworkAnalysis.UI"
        mc:Ignorable="d"
        Title="Sosyal Ağ Analizi ve Görselleştirme" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- Left Side: Canvas -->
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Canvas x:Name="GraphCanvas" Background="White" MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown"/>
        </Border>

        <!-- Right Side: Controls -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- File Operations -->
            <GroupBox Header="Dosya İşlemleri" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Button x:Name="BtnLoadCsv" Content="CSV Yükle" Height="30" Margin="0,0,0,5" Click="BtnLoadCsv_Click"/>
                    <Button x:Name="BtnLoadJson" Content="JSON Yükle" Height="30" Margin="0,0,0,5" Click="BtnLoadJson_Click"/>
                    <Button x:Name="BtnSaveCsv" Content="CSV Kaydet" Height="30" Margin="0,0,0,5" Click="BtnSaveCsv_Click"/>
                    <Button x:Name="BtnSaveJson" Content="JSON Kaydet" Height="30" Margin="0,0,0,5" Click="BtnSaveJson_Click"/>
                    <Button x:Name="BtnExportMatrix" Content="Komşuluk Matrisi Export" Height="30" Margin="0,0,0,5" Click="BtnExportMatrix_Click"/>
                    <Button x:Name="BtnExportList" Content="Komşuluk Listesi Export" Height="30" Click="BtnExportList_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Node/Edge Management -->
            <GroupBox Header="Düğüm/Kenar Yönetimi" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Button x:Name="BtnAddNode" Content="Düğüm Ekle" Height="25" Margin="0,0,0,5" Click="BtnAddNode_Click"/>
                    <Button x:Name="BtnRemoveNode" Content="Düğüm Sil" Height="25" Margin="0,0,0,5" Click="BtnRemoveNode_Click"/>
                    <Button x:Name="BtnUpdateNode" Content="Düğüm Güncelle" Height="25" Margin="0,0,0,5" Click="BtnUpdateNode_Click"/>
                    <Separator Margin="0,5"/>
                    <Button x:Name="BtnAddEdge" Content="Kenar Ekle" Height="25" Margin="0,0,0,5" Click="BtnAddEdge_Click"/>
                    <Button x:Name="BtnRemoveEdge" Content="Kenar Sil" Height="25" Click="BtnRemoveEdge_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Algorithms -->
            <GroupBox Header="Algoritmalar" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <TextBlock Text="Seçim Modu:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton x:Name="RadioSource" Content="Başlangıç (Kaynak) Seç" IsChecked="True" Margin="0,0,0,2"/>
                    <RadioButton x:Name="RadioTarget" Content="Bitiş (Hedef) Seç" Margin="0,0,0,5"/>

                    <TextBlock Text="Kaynak ID:" Margin="0,5,0,0"/>
                    <TextBox x:Name="TxtSourceId" IsReadOnly="True" Background="#EEE" Margin="0,0,0,5"/>

                    <TextBlock Text="Hedef ID:" Margin="0,5,0,0"/>
                    <TextBox x:Name="TxtTargetId" IsReadOnly="True" Background="#EEE" Margin="0,0,0,10"/>

                    <Button x:Name="BtnBfs" Content="BFS (Gezinti)" Height="25" Margin="0,0,0,5" Click="BtnBfs_Click"/>
                    <Button x:Name="BtnDfs" Content="DFS (Gezinti)" Height="25" Margin="0,0,0,5" Click="BtnDfs_Click"/>
                    <Separator Margin="0,5"/>
                    <Button x:Name="BtnDijkstra" Content="Dijkstra (En Kısa Yol)" Height="25" Margin="0,0,0,5" Click="BtnDijkstra_Click"/>
                    <Button x:Name="BtnAStar" Content="A* (En Kısa Yol)" Height="25" Margin="0,0,0,5" Click="BtnAStar_Click"/>
                    <Separator Margin="0,5"/>
                    <Button x:Name="BtnCentrality" Content="Merkezilik (Centrality)" Height="25" Margin="0,0,0,5" Click="BtnCentrality_Click"/>
                    <Separator Margin="0,5"/>
                    <Button x:Name="BtnConnectedComponents" Content="Bağlı Bileşenler" Height="25" Margin="0,0,0,5" Click="BtnConnectedComponents_Click"/>
                    <Button x:Name="BtnColoring" Content="Welsh-Powell Renklendirme" Height="25" Click="BtnColoring_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Info Panel -->
            <GroupBox Header="Bilgi / Sonuçlar" Height="200">
                <ScrollViewer>
                    <TextBlock x:Name="TxtInfo" TextWrapping="Wrap" Margin="5"/>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
