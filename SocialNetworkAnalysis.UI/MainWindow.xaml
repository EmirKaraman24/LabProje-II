<Window x:Class="SocialNetworkAnalysis.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworkAnalysis.UI"
        mc:Ignorable="d"
        Title="Sosyal Ağ Analizi" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <!-- Graph Area -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Canvas x:Name="GraphCanvas" Background="#FAFAFA" MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown"/>
        </Border>

        <!-- Control Panel -->
        <StackPanel Grid.Column="1" Margin="5" Background="#F0F0F0">
            <TextBlock Text="Kontrol Paneli" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <GroupBox Header="Dosya İşlemleri" Margin="0,5">
                <StackPanel>
                    <Button x:Name="BtnLoadGraph" Content="Graf Yükle (CSV)" Margin="5" Click="BtnLoadGraph_Click"/>
                    <Button x:Name="BtnSaveGraph" Content="Graf Kaydet" Margin="5" Click="BtnSaveGraph_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Algoritmalar" Margin="0,5">
                <StackPanel>
                    <TextBlock Text="Seçim Modu:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <RadioButton x:Name="RadioSource" Content="Başlangıç (Kaynak) Seç" GroupName="SelectionMode" IsChecked="True"/>
                    <RadioButton x:Name="RadioTarget" Content="Bitiş (Hedef) Seç" GroupName="SelectionMode"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Kaynak:" Width="50"/>
                        <TextBox x:Name="TxtSourceId" Width="100" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Hedef:" Width="50"/>
                        <TextBox x:Name="TxtTargetId" Width="100" IsReadOnly="True" Background="#EEE"/>
                    </StackPanel>

                    <Button x:Name="BtnBfs" Content="BFS Çalıştır (Kaynak'tan)" Margin="2" Click="BtnBfs_Click"/>
                    <Button x:Name="BtnDfs" Content="DFS Çalıştır (Kaynak'tan)" Margin="2" Click="BtnDfs_Click"/>
                    <Button x:Name="BtnDijkstra" Content="Dijkstra (En Kısa Yol)" Margin="2" Click="BtnDijkstra_Click"/>
                    <Button x:Name="BtnAStar" Content="A* (En Kısa Yol)" Margin="2" Click="BtnShortestPath_Click"/>
                    <Button x:Name="BtnCentrality" Content="Merkezilik Analizi" Margin="2" Click="BtnCentrality_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Bilgi" Margin="0,5">
                <TextBlock x:Name="TxtInfo" Text="Hazır" TextWrapping="Wrap" Height="100"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
